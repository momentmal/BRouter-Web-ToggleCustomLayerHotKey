{
  "manifest_version": 3,
  "name": "BRouter Layer Hotkeys",
  "version": "1.1.0",
  "description": "Toggle custom layers in BRouter-Web with keyboard shortcuts.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://bikerouter.de/*",
    "https://brouter.de/*",
    "https://dev.bikerouter.de/*",
    "https://next.bikerouter.de/*"
  ],
  "content_scripts": [{
    "matches": [
      "https://bikerouter.de/*",
      "https://brouter.de/*",
      "https://dev.bikerouter.de/*",
      "https://next.bikerouter.de/*"
    ],
    "js": ["content.js"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "BRouter Layer Hotkeys"
  }
}
